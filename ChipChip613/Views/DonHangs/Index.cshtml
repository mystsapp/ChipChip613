<!-- them don hàng modal-->

<div class="modal fade" id="modal-donhang" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <form asp-action="Create" method="post" autocomplete="off">
            <div class="modal-content bg-secondary">
                <div class="modal-header">
                    <h4 class="modal-title">Thông tin đơn hàng</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">

                        <div class="col-md-3">
                            <label asp-for="DonHang.KhachHang" class="control-label"></label>
                            <input asp-for="DonHang.KhachHang" class="form-control" value="Khách lẽ" />
                            <span asp-validation-for="DonHang.KhachHang" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="DonHang.NgayTao" class="control-label"></label>
                            <input type="text" value="" asp-for="DonHang.NgayTao" class="form-control maskInput" />
                            <span asp-validation-for="DonHang.NgayTao" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="DonHang.DienThoai" class="control-label"></label>
                            <input asp-for="DonHang.DienThoai" class="form-control" />
                            <span asp-validation-for="DonHang.DienThoai" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="DonHang.DiaChi" class="control-label"></label>
                            <input asp-for="DonHang.DiaChi" class="form-control" />
                            <span asp-validation-for="DonHang.DiaChi" class="text-danger"></span>
                        </div>

                        <input type="hidden" name="strUrl" value="@Model.StrUrl" />
                    </div>

                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-outline-light" data-dismiss="modal"><i class="fas fa-power-off"></i></button>
                    <button type="submit" class="btn btn-outline-light"><i class="fas fa-save"></i></button>
                </div>
            </div>
        </form>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách đơn hàng</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">

            <form method="get" autocomplete="off">

                <div class="container" style="padding-bottom:10px; background-color: aliceblue;" id="search">
                    @* we will add search criteria *@

                    <div class="col-md-12">
                        <div class="row" style="padding-top: 10px;">

                            <div class="col-md-3">
                                Nhập thông tin
                                @*@Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @value="@ViewData["currentFilter"]" } })*@
                                <input class="form-control" name="searchString" value="@ViewBag.searchString" />
                            </div>

                            <div class="col-md-3">
                                Từ ngày
                                <input class="form-control maskInput" name="searchFromDate" value="@ViewBag.searchFromDate" />
                            </div>

                            <div class="col-md-3">
                                Đến ngày
                                <input class="form-control maskInput" name="searchToDate" value="@ViewBag.searchToDate" />
                            </div>

                            <!-- click row and submit to index -->
                            @*<input type="hidden" name="id" id="hidId" />
                                <input type="hidden" name="page" id="hidPage" />*@

                        <div class="col-md-3 ">
                            <br />
                            <div class="btn-group btn-block">
                                <button type="submit" class="btn btn-primary " id="btnSubmit">
                                    <i class="fas fa-search"></i>
                                </button>
                                <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#modal-donhang">Thêm Mới</button>
                            </div>
                            
                        </div>
                        </div>
                    </div>
                </div>
            </form>
            <br />
            <div style="overflow-x:auto;">
                <table class="table mytable text-nowrap tblEMD" id="listAll">
                    <thead>
                        <tr class="table-info">
                            <th>#</th>
                            <th>STT</th>
                            @*<th>@Html.DisplayNameFor(m => m.DonHangDtos.FirstOrDefault().Id)</th>*@
                            <th>@Html.DisplayNameFor(m => m.DonHangDtos.FirstOrDefault().KhachHang)</th>
                            <th>@Html.DisplayNameFor(m => m.DonHangDtos.FirstOrDefault().SoLuong)</th>
                            <th>@Html.DisplayNameFor(m => m.DonHangDtos.FirstOrDefault().SoLuongTT)</th>
                            <th>@Html.DisplayNameFor(m => m.DonHangDtos.FirstOrDefault().SoLuongXX)</th>
                            <th>@Html.DisplayNameFor(m => m.DonHangDtos.FirstOrDefault().ThanhTien)</th>
                            <th>@Html.DisplayNameFor(m => m.DonHangDtos.FirstOrDefault().NgayTao)</th>
                            <th>@Html.DisplayNameFor(m => m.DonHangDtos.FirstOrDefault().DiaChi)</th>
                            <th>@Html.DisplayNameFor(m => m.DonHangDtos.FirstOrDefault().DienThoai)</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.DonHangDtos)
                        {

                            <tr class="cursor-pointer ">

                                <td>
                                    <div class="btn-group text-white" role="group">


                                        @*@if (item.NgayTao.ToShortDateString() == DateTime.Now.ToShortDateString())
        {
            <a class="btn btn-success btn-sm" title="Thêm chi tiết" asp-action="Create" asp-controller="ChiTietDonHangs" asp-route-donHangId="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-plus"></i></a>

        }
        else
        {
            <a class="btn btn-success btn-sm disabled" title="Thêm chi tiết" asp-action="Create" asp-controller="ChiTietDonHangs" asp-route-donHangId="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-plus"></i></a>

        }*@

                                        <a class="btn btn-success btn-sm" title="Thêm chi tiết" asp-action="Create" asp-controller="ChiTietDonHangs" asp-route-donHangId="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-plus"></i></a>
                                        <a class="btn btn-primary btn-sm" title="Cập nhật" asp-action="Edit" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-edit"></i></a>
                                        @*<a class="btn btn-success btn-sm" title="Chi tiết" asp-action="Details" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-list"></i></a>*@
                                        <form asp-action="Delete" asp-route-id="@item.Id" asp-route-strUrl="@Model.StrUrl" method="post">

                                            <span id="confirmDeleteSpan_@item.Id" style="display: none">
                                                <span class="text-dark">Xóa?</span>
                                                <button type="submit" class="btn btn-danger">Yes</button>
                                                <button type="button" class="btn btn-primary" onclick="confirmDelete('@item.Id', false)">No</button>
                                            </span>

                                            <span id="deleteSpan_@item.Id">
                                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id', true)"><i class="fas fa-trash-alt"></i></button>
                                            </span>
                                        </form>
                                    </div>
                                </td>
                                <td>@stt</td>
                                @*<td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.Id)</td>*@
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.KhachHang)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.SoLuong.ToString("N0"))</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.SoLuongTT.ToString("N0"))</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.SoLuongXX.ToString("N0"))</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.ThanhTien.ToString("N0"))</td>
                                <td class="tdVal" data-id="@item.Id">@Html.Raw(item.NgayTao.ToString("dd/MM/yyyy"))</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.DiaChi)</td>
                                <td class="tdVal" data-id="@item.Id">@Html.DisplayFor(m => item.DienThoai)</td>

                            </tr>
                            stt++;
                        }
                    </tbody>

                </table>
                <span><strong>- Hôm nay: - SL tổng: @Model.DonHangDtos.Where(x => x.NgayTao.ToShortDateString() == DateTime.Now.ToShortDateString()).Select(x => x.SoLuong).Sum()</strong></span>
                <span><strong>- SL Truyền thống: @(Model.DonHangDtos.Where(x => x.NgayTao.ToShortDateString() == DateTime.Now.ToShortDateString()).Select(x => x.SoLuong).Sum() - Model.DonHangDtos.Where(x => x.NgayTao.ToShortDateString() == DateTime.Now.ToShortDateString()).Select(x => x.SoLuongXX).Sum())</strong></span>
                <span><strong>- SL Xúc xích: @(Model.DonHangDtos.Where(x => x.NgayTao.ToShortDateString() == DateTime.Now.ToShortDateString()).Select(x => x.SoLuongXX).Sum())</strong></span>
                <span><strong>- Tổng tiền: @(Model.DonHangDtos.Where(x => x.NgayTao.ToShortDateString() == DateTime.Now.ToShortDateString()).Select(x => x.ThanhTien).Sum().ToString("N0"))</strong></span>
                <br />
                <span><strong>- Tổng SL: @Model.DonHangDtos.FirstOrDefault().TongSL</strong></span>
                <span><strong>- Tổng SLTT: @Model.DonHangDtos.FirstOrDefault().TongSLTT</strong></span>
                <span><strong>- Tổng SLXX: @Model.DonHangDtos.FirstOrDefault().TongSLXX</strong></span>
                <span><strong>- Tổng tiền: @Model.DonHangDtos.FirstOrDefault().TongTien.ToString("N0")</strong></span>
            </div>

            @if (Model.DonHangDtos != null)
            {
                @Html.PagedListPager((IPagedList)Model.DonHangDtos, page => Url.Action("Index", new
           {
               page = page,
               option = Context.Request.Query["option"],
               searchString = @ViewBag.searchString,
               searchFromDate = @ViewBag.searchFromDate,
               searchToDate = @ViewBag.searchToDate,
           }),
                    PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" },
                        MaximumPageNumbersToDisplay = 5,
                        UlElementClasses = new[] { "pagination" },
                        ContainerDivClasses = new[] { "pagination-container" }
                    }, new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "nameListContainer" }))
            }

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->



@section Scripts{
    <script>

        $(function () {
            //$("#datepicker").datepicker({
            //    dateFormat: 'dd/mm/yy'
            //});

            $('#listAll').DataTable({
                "paging": false,
                "lengthChange": true,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
            });
        });
    </script>
    @*<script src="~/js/Admin/NganhNghe/indexController.js"></script>*@

    <script>

        $('.cursor-pointer').click(function () {
            if ($(this).hasClass("bg-warning"))
                $(this).removeClass("bg-warning");
            else {
                $('tr.bg-warning').removeClass("bg-warning");
                $(this).addClass("bg-warning");
            }

        });

        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;

            if (isDeleteClicked) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
    </script>


    <style>
        #listAll {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        #search {
            box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .tblEMD .cursor-pointer:hover {
            background-color: #FFC107;
            cursor: pointer;
        }

        .hoverClass {
            background-color: #3E5C9A;
        }
    </style>
}

